<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Forwarder" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:colorControlActivated">@color/gray</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="strokeColor">@color/stroke_light</item>
        <item name="colorSecondaryFixed">@color/button_disabled_light</item>
        <item name="colorOnSecondaryFixed">@color/text_disabled_light</item>
        <item name="colorOnSurfaceVariant">@color/platinum</item>
        <item name="colorSplashBackground">@color/light_blue</item>
    </style>

    <style name="Theme.Forwarder" parent="Base.Theme.Forwarder" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Forwarder</item>
    </style>

    <style name="GoogleMaterialButton">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/google_button_stroke</item>
    </style>

    <style name="SmsEditTextCommon" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="errorIconTint">@color/red</item>
        <item name="errorTextColor">@color/red</item>
        <item name="helperTextTextColor">@color/red</item>
        <item name="cursorErrorColor">?attr/colorOnPrimary</item>
        <item name="hintEnabled">false</item>
        <item name="cursorColor">?attr/colorOnPrimary</item>
    </style>

    <style name="SmsAlertDialogCommon" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Button text color -->
        <item name="buttonBarPositiveButtonStyle">@style/CustomDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomDialogButton</item>
    </style>

    <style name="SmsAlertDialog" parent="SmsAlertDialogCommon">
        <!-- Background color -->
        <item name="android:background">@color/black</item>

        <!-- Title text color -->
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Message text color -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="CustomDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SmsEditText" parent="SmsEditTextCommon">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@drawable/edit_text_layout_stroke_colors</item>
    </style>

    <style name="SmsMaterialButton">
        <item name="backgroundTint">@drawable/button_background_colors</item>
        <item name="android:textColor">@drawable/button_text_colors</item>
        <item name="android:textAppearance">@style/SmsTextAppearance.Bold.16</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="SmsCancelMaterialButton" parent="SmsMaterialButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="strokeColor">?attr/strokeColor</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="CustomDialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:colorControlActivated">@color/gray</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="CustomDialogStroke">
        <item name="strokeWidth">0dp</item>
    </style>
</resources>
