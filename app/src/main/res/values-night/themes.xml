<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.InnoForwarder" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorSecondary">@color/blue_light_theme</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:colorControlActivated">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondaryFixed">@color/button_disabled_dark</item>
        <item name="colorOnSecondaryFixed">@color/text_disabled_dark</item>
        <item name="strokeColor">@color/stroke_dark</item>
        <item name="colorOnSurfaceVariant">@color/gray</item>
    </style>

    <style name="GoogleMaterialButton">
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="SmsEditText" parent="SmsEditTextCommon">
        <item name="boxBackgroundColor">@color/stroke_dark</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="CustomDialogStroke">
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="SmsAlertDialog" parent="SmsAlertDialogCommon">
        <!-- Background color -->
        <item name="android:background">@color/white</item>

        <!-- Title text color -->
        <item name="android:textColorPrimary">@color/black</item>

        <!-- Message text color -->
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="CustomDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
